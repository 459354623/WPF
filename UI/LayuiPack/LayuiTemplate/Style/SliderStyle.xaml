<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Lay="clr-namespace:LayuiTemplate.Control">


    <Style x:Key="ThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Focusable" Value="false" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border BorderBrush="{TemplateBinding Background}" BorderThickness="2" Background="#FFFFFF" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="20"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Width" Value="18" />
                            <Setter Property="Height" Value="18" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="drb" TargetType="{x:Type RepeatButton}">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Grid Background="{TemplateBinding Background}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="irb" TargetType="{x:Type RepeatButton}">
        <Setter Property="Background" Value="#EEEEEE" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="4" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Grid Background="{TemplateBinding Background}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Lay:LaySlider}">
        <Setter Property="Background" Value="#009688" />
        <Setter Property="Focusable" Value="false"  />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Lay:LaySlider}">
                    <Grid x:Name="grid" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}">
                        <Track Grid.Column="1" Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton x:Name="drb" Background="{TemplateBinding Background}" Style="{StaticResource drb}" />
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton x:Name="irb" Style="{StaticResource irb}" />
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Background="{TemplateBinding Background}" Style="{StaticResource ThumbStyle}"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#c2c2c2" />
                        </Trigger>
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter TargetName="grid" Property="Height" Value="18" />
                            <Setter TargetName="drb" Property="Height" Value="4" />
                            <Setter TargetName="drb" Property="Width" Value="{Binding ElementName=grid,Path=ActualWidth}" />
                            <Setter TargetName="irb" Property="Height" Value="4" />
                            <Setter TargetName="irb" Property="Width" Value="{Binding ElementName=grid,Path=ActualWidth}" />
                        </Trigger>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="grid" Property="Width" Value="18" />
                            <Setter TargetName="drb" Property="Width" Value="4" />
                            <Setter TargetName="drb" Property="Height" Value="{Binding ElementName=grid,Path=ActualHeight}" />
                            <Setter TargetName="irb" Property="Width" Value="4" />
                            <Setter TargetName="irb" Property="Height" Value="{Binding ElementName=grid,Path=ActualHeight}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>