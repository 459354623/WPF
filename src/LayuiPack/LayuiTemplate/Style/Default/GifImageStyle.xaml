<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Lay="clr-namespace:LayuiTemplate.Controls">
    <Style x:Key="LayGifImageStyle" TargetType="Lay:LayGifImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Lay:LayGifImage">
                    <Border CornerRadius="{TemplateBinding CornerRadius}">
                        <Border.Background>
                            <ImageBrush x:Name="PART_Image" Stretch="{TemplateBinding Stretch}" />
                        </Border.Background>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style BasedOn="{StaticResource LayGifImageStyle}" TargetType="Lay:LayGifImage" />
</ResourceDictionary>