<UserControl
    x:Class="LayuiComponentExample.Views.Drawer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Lay="clr-namespace:LayuiTemplate.Control;assembly=LayuiTemplate"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <Lay:LayDrawerHost
        IsModal="false"
        LeftDrawerBackground="White"
        LeftDrawerOpen="{Binding ElementName=Open, Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        Style="{DynamicResource LayDrawerHostStyle}">
        <Lay:LayDrawerHost.LeftDrawerContent>
            <Grid Width="300" />
        </Lay:LayDrawerHost.LeftDrawerContent>
        <ToggleButton
            x:Name="Open"
            Width="150"
            Height="50" />
    </Lay:LayDrawerHost>
</UserControl>
